{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Package.json",
  "type": "object",
  "required": ["name", "version"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the package."
    },
    "version": {
      "type": "string",
      "description": "Version must be parseable by node-semver."
    }
  }
} 